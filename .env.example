# ============================================
# Government Server Configuration
# ============================================
# Copy this file to .env and update values with your own

# Server Port
PORT=3000

# Environment (development or production)
NODE_ENV=development

# ============================================
# Security & Authentication
# ============================================

# Admin password (will be hashed with bcrypt)
# Change this to a strong password!
ADMIN_PASSWORD=OFPPT2026

# Session secret (generate a random string for production)
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=change-me-to-a-secure-random-string

# JWT secret (generate a random string for production)
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=change-me-to-another-secure-random-string

# ============================================
# CORS & URL Configuration
# ============================================

# Frontend origin (for CORS - comma-separated for multiple origins)
FRONTEND_ORIGIN=http://localhost:3000

# Base URL (used for email links, redirects, etc)
BASE_URL=http://localhost:3000

# ============================================
# Email Configuration (Optional)
# ============================================
# Only needed if you want password reset emails

SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL="No Reply <no-reply@example.com>"
